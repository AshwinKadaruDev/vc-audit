# ============================================================================
# Database Configuration
# ============================================================================
# Update with your PostgreSQL credentials
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/vc_audit

# Database Pool Settings (for production optimization)
# Number of permanent connections in the pool
DB_POOL_SIZE=10
# Maximum temporary connections under load (total = POOL_SIZE + MAX_OVERFLOW)
DB_MAX_OVERFLOW=20
# Recycle connections after this many seconds (prevents stale connections)
DB_POOL_RECYCLE=3600
# Connection timeout in seconds
DB_CONNECT_TIMEOUT=10
# Query timeout in seconds
DB_COMMAND_TIMEOUT=30

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: "text" for development (human-readable), "json" for production (structured)
LOG_FORMAT=text

# ============================================================================
# Rate Limiting (Production Security)
# ============================================================================
# Maximum requests per IP address
RATE_LIMIT_REQUESTS=100
# Time window in seconds for rate limiting
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Retry Configuration (Reliability)
# ============================================================================
# Maximum retry attempts for transient failures
RETRY_MAX_ATTEMPTS=3
# Initial retry delay in seconds (exponential backoff)
RETRY_BASE_DELAY=0.1
# Maximum retry delay in seconds (cap for exponential backoff)
RETRY_MAX_DELAY=5.0

# ============================================================================
# Application Settings
# ============================================================================
# Environment: "development" or "production"
# Note: Rate limiting is only enabled in production
ENVIRONMENT=development
